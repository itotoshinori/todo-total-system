
<% weather = @weather.re_info %>
<% if weather %> 
 <table>
  <tr>
    <td><%= @placename %></td>
  <% weather.each do | datehour,word,icon,get_info | %>
    <td valign="top" >
      <div style="font-size: 10px;">
        <%= datehour %><br />
        <% if get_info %>
          <%= image_tag "/gazou/#{icon}",:size => '50x50'%>
        <% else %>
          <%= word %>
        <% end %>
      </div>
    </td>
  <% end %>
    </tr>
  </table>
<% else %>
  <%= @placename %>の天気予報の情報取得に失敗しました
<% end %>