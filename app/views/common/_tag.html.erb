<div class="box1">
  <button id="bodyclear" type="button">本文消去</button>
  <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
    本文にタグを挿入する
  </a>
  <button id="important" type="button">重要</button>
</div>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <div class="link_groupe">
      <hr class="line">
      <label>リンク（URL)</label><br>
      <input class="input_link" id="input" type="text" name="text" value=""><br>
      <label>タイトル</label><br>
      <input class="input_link" id="input2" type="text" name="text2" value=""><br>
      <button id="linkbutton" type="button">リンクタグ追加</button>
    </div>
    <hr class="line">
    <div>
      <label>画像リンク（URL)</label><br>
      <input class="input_link" id="input3" type="text" name="text2" value=""><br>
      <button id="imagelinkbutton" type="button">画像リンクタグ追加</button>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("#linkbutton").click(function () {
      var input = $('#input').val();
      var input2 = $('#input2').val();
      var body = $('#body').val();
      $('#input').val("");
      $('#input2').val("");
      if(!input2){
        input2 = "リンク"
      }
      link = "<a href ='" + input + "'>" + input2 + "</a>"  
      if (!input) {
        alert('リンクを入力して下さい');
      } else {
        if (body){
          body = body + "　"
        }
        $('#body').focus().val(body + link);
      } 
  });
  $("#imagelinkbutton").click(function () {
      var input3 = $('#input3').val();
      var body = $('#body').val();
      $('#input3').val("");
      link = "<a href =" + input3 + "><img src =" + input3 + " width=100%></a>";
      if (!input3) {
        alert('画像リンクを入力して下さい');
      } else {
        $('#body').focus().val(body + link);
      } 
  });
  $("#bodyclear").click(function () {
      $('#body').val("");
  });
  $("#important").click( function() {
    // 追記するデータを定義しておきます
    var addText = "【重】";
    // テキストボックスのデータを取得します
    var getData = String($("#title").val());
    // 取得データと追記文言をくっつけて出力します
    $("#title").val( addText + getData );
  });
</script>
