<h1>ユーザー一覧</h1>
<table>
  <tr>
    <th scope="col" style="width:140px">名前</th>
    <th>メールアドレス</th>
  </tr>
<% @users.each do |user|%>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to "削除", user_path(user.id) , method: :DELETE,data: { confirm: "本当に削除しますか？?" } %></td>
    <td><%#= button_to "パスワードリセット", url:"/users/#{user.id}/password_reset" , method: :PATCH, data: { confirm: "本当にパスワードをリセットしますか？?" } %></td>
    <td><%= button_to "リセット", users_password_reset_path, { method: :post,params: {id: user.id},class:"btn btn-warning" } %></td>
  </tr>
<% end %>
</table>


