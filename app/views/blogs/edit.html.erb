<%= form_for(@blog) do |f| %>
    <p></p>
      <%= f.label :ブログタイトル %><br>
      <%= f.text_field :title, placeholder: 'enter ブログタイトル(必須)'  %>
      <p>
      <%= f.label :ブログ記事 %><br>
      <%= f.text_area :content, placeholder: 'enter ブログ記事(必須)',cols:65,rows:10 %><br>
       <%= f.submit "実行", class: "btn btn-primary",data: { disable_with: '送信中...' },style:"width:100px;height:50px" %>
    <% end %>
<% if @url %>
  <%= link_to("前のページに戻る",@url) %>
<% end %><br>
