    <% @blogs.each do |f| %>
        <% suu=f.comments.count %>
        <div class="content-title"><%= f.title %></div>
        <%= simple_format(f.content) %>
        <%= f.created_at.strftime("%Y-%m-%d %H:%M") %>
        <%= link_to "コメント(#{suu})","/blogs/#{f.id.to_s}" %>
        <%= link_to "修正","/blogs/#{f.id.to_s}/edit" if cookies[:userid].present? %>
        <%#= link_to '削除', blog_path, method: :delete, data: { confirm: '削除しますか？' } if cookies[:userid].present? %>
        <%= link_to "削除","/blog/#{f.id.to_s}/delete", method: :delete,  data: { confirm: '本当に削除しますか？' } if cookies[:userid].present? %>
        <br>
    <% end %>
    <hr class="line">
    <%#= will_paginate @blogs %>
    <%= will_paginate @blogs, :previous_label => ' < 前へ', :next_label => '次へ >', page_gap: '…' %>

